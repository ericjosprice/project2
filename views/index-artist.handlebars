<!-- CARD MODAL -->
<div class="modal fade" id="form-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        INSERT VENUE PROFILE CODE HERE!!
      </div>
    </div>
  </div>
</div>

<!-- PROFILE -->
<div class="profile-left">
  <div class="profile-picture">
    <img class="image" src={{artist.profileImage}} alt="profile-image">
  </div>
  <div class="profile-content">
    <h1 class="name">{{artist.artistName}}</h1>
    <p class="band-genres">{{artist.genre}}</p>
    <br>
    <p>Members: <strong>{{artist.numberOfMembers}}</strong></p>
    <p class="instruments">{{artist.instrumentation}}</p>
    <div class="profile-bottom">
      <p>{{artist.email}}</p>
      <p>{{artist.website}}</p>
      <p>{{artist.phone}}</p>
      <button id="logout" class="btn btn-primary btn-lg btn-main logout">Logout</button>
    </div>
  </div>
</div>

<!-- FEED -->
<div class="profile-right">

  {{!-- VENUE FILTER --}}
  <form class="input-group mb-3">
    <div class="input-group-prepend">
      <button class="btn btn-outline-secondary" type="submit" id="filter">Filter</button>
    </div>
    <select name="id" class="custom-select" id="inputGroupSelect03">
      <option selected>All Venues</option>
      {{#each gigs}}
      <option value="{{this.gigName}}">{{this.gigName}}</option>
      {{/each}}
      <option selected>Booked</option>
    </select>
  </form>
  {{!-- VENUE FILTER --}}

  <div class="card-display">
    {{#each gigs}}
    {{!-- {{#unless isBooked}} --}}
    <div class="gig-card">
      <img class="image" src={{this.image}} alt="venue-image">
      <div class="card-text">
        <div class="card-title">{{this.gigName}}</div>
        <p class="card-desc">{{this.description}}</p>
        {{!-- <hr class="divider"> --}}
        <div class="card-genre">{{this.genre}}</div>
        <div class="card-date"><strong>{{this.date}}</strong></div>
        <button class="btn btn-primary btn-lg btn-main book card-button">Book</button>
      </div>
    </div>
    {{!-- {{/unless}} --}}
    {{/each}}
  </div>

</div>

{{!-- link to handle the logout button --}}
<script type="text/javascript" src="/js/logout.js"></script>