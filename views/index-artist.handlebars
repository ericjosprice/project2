<!-- VIEW PROFILE MODAL -->
<div class="modal fade" id="profile-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">Login</div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="profile-picture">
          <img class="image-profile" src={{artist.profileImage}} alt="profile-image">
        </div>
        <div class="profile-content">
          <h1 class="name">{{artist.artistName}}</h1>
          <p class="band-genres">{{artist.genre}}</p>
          <br>
          <p>Members: <strong>{{artist.numberOfMembers}}</strong></p>
          <p class="instruments">{{artist.instrumentation}}</p>
          <div class="profile-bottom">
            <p>{{artist.email}}</p>
            <p>
              <a class="website-link" href="{{artist.website}}" target="_blank">{{artist.website}}</a>
            </p>
            <p>{{artist.phone}}</p>
            <button class="btn btn-primary btn-lg logout">Logout</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- PROFILE -->
<div class="profile-left">
  <div class="profile-picture">
    <img class="image-profile" src={{artist.profileImage}} alt="profile-image">
  </div>
  <div class="profile-content">
    <h1 class="name">{{artist.artistName}}</h1>
    <p class="band-genres">{{artist.genre}}</p>
    <br>
    <p>Members: <strong>{{artist.numberOfMembers}}</strong></p>
    <p class="instruments">{{artist.instrumentation}}</p>
    <div class="profile-bottom">
      <p>{{artist.email}}</p>
      <p>
        <a class="website-link" href="{{artist.website}}" target="_blank">{{artist.website}}</a>
      </p>
      <p>{{artist.phone}}</p>
      <button class="btn btn-primary btn-lg logout">Logout</button>
    </div>
  </div>
</div>

<!-- FEED -->
<div class="profile-right">

  <button class="btn btn-primary btn-lg btn-scnd view-profile" data-toggle="modal"
    data-target="#profile-modal">View Profile</button>

  {{!-- VENUE FILTER --}}
  <form class="input-group mb-3 venue-filter">
    <div class="input-group-prepend">
      <button class="btn btn-outline-secondary" type="submit" id="filter">Filter</button>
    </div>
    <select name="id" class="custom-select" id="inputGroupSelect03">
      <option selected>All Venues</option>
      {{#each venues}}
      <option value="{{this.venueName}}">{{this.venueName}}</option>
      {{/each}}
    </select>
  </form>
  {{!-- VENUE FILTER --}}

  {{!-- ALL AVAILABLE GIGS --}}
  <div class="card-display">
    {{#each gigs}}
    {{#unless isBooked}}
    <div class="gig-card">
      <img class="image" src={{this.image}} alt="venue-image">
      <div class="card-text">
        <div class="card-title">{{this.gigName}}</div>
        <p class="card-desc">{{this.description}}</p>
        {{!-- <hr class="divider"> --}}
        <div class="card-genre">{{this.genre}}</div>
        <div class="card-date">{{this.date}}</div>
        <button class="btn btn-primary btn-lg btn-main book card-button" data-id="{{this.id}}">Book</button>
      </div>
    </div>
    {{/unless}}
    {{/each}}
  </div>


</div>

{{!-- link to handle the logout button --}}
<script type="text/javascript" src="/js/logout.js"></script>
<script type="text/javascript" src="/js/book-a-band.js"></script>