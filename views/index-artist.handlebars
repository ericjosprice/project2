<!-- CARD MODAL -->
<div class="modal fade" id="form-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        INSERT VENUE PROFILE CODE HERE!!
      </div>
    </div>
  </div>
</div>

<!-- PROFILE -->
<div class="profile">
  <div class="profile-picture">
    <img class="image" src={{artist.profileImage}} alt="profile-image">
  </div>
  <div class="profile-content">
    <h1 class="band-name">{{artist.artistName}}</h1>
    <p class="band-subname"></p>
    <p class="band-genres">{{artist.genre}}</p>
    <div class="contact">
      <p>{{artist.email}}</p>
      <p>{{artist.website}}</p>
      <p>{{artist.phone}}</p>
    </div>
    <button class="btn btn-primary btn-lg gig-view">Profile?</button>
  </div>
</div>

<!-- FEED -->
<div id="feed">

  {{!-- venue filter --}}


  <form class="input-group mb-3">
    <div class="input-group-prepend">
      <button class="btn btn-outline-secondary" type="submit" id="filter">Filter</button>
    </div>
    <select name="id" class="custom-select" id="inputGroupSelect03">
      <option selected>Select Venue</option>
      {{#each gig}}
      <option value="{{this.gigName}}">{{this.gigName}}</option>
      {{/each}}
    </select>
  </form>

  {{!-- venue filter --}}


  <form id="search">
    <div class="form-group">
      <input type="search" class="form-control" id="search-bar" placeholder="Search">
    </div>
  </form>

  <div id="card-display">
    {{#each gig}}
    <div class="gig-card" data-toggle="modal" data-target="#form-modal">
      <img class="image" src={{this.profileImage}} alt="venue-image">
      <div class="card-text">
        <div class="card-title">{{this.gigName}}</div>
        <p class="card-desc">{{this.discription}}</p>
        <hr>
        <div class="tags">{{this.date}}</div>
      </div>
    </div>

    {{!-- <div class="venue-card placeholder">
      <!-- THIS IS USED TO KEEP THE LAST ROW OF CARDS LEFT JUSTIFIED
                IF THERE ARE ONLY TWO CARDS IN THE LAST ROW!! -->
    </div> --}}
    {{/each}}
  </div>

</div>


